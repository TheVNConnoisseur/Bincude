<Window x:Class="Bincude.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bincude"
        mc:Ignorable="d"
        Title="Bincude" Height="295" Width="405" ResizeMode="CanMinimize" WindowStyle="ThreeDBorderWindow">
    <Canvas Margin="0,0,0,-6" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button x:Name="Button_Original_File" RenderTransformOrigin="0.939,0.635" Height="32" Canvas.Left="-43" Width="94" Content="Select files" Click="Button_Original_File_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Top="-9" IsEnabled="False"/>
        <Button x:Name="Button_Convert" Content="Convert" Canvas.Left="-43" Canvas.Top="50" RenderTransformOrigin="0.127,0.129" IsEnabled="False" Height="37" Width="94" Click="Button_Convert_Click" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <ComboBox x:Name="ComboBox_Version_Selector" Canvas.Left="-56" Canvas.Top="-55" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top">
            <ComboBoxItem Content="ESC-ARC1"/>
            <ComboBoxItem Content="ESC-ARC2"/>
        </ComboBox>
        <RadioButton x:Name="RadioButton_Compress" Content="Compress" Canvas.Left="-138" Canvas.Top="-92" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="RadioButton_Compress_Checked"/>
        <RadioButton x:Name="RadioButton_Uncompress" Content="Uncompress" Canvas.Left="68" Canvas.Top="-92" HorizontalAlignment="Left" VerticalAlignment="Center" Checked="RadioButton_Uncompress_Checked"/>
    </Canvas>
</Window>